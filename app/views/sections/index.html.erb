<div class="tabs is-large">
    <li class="is-active"> <% @sections.each do |section| %>
      <%= link_to(section.name, sections_path(section: section.name), class: " #{'active'if params[:section] == section.name}") %>
    </li>  
  <% end %>
</div>
  
<% if @food_items.present? %>
  <br></br>
    <% @food_items.each do |food_item| %>
      <div class="image">
        <img  src="<%= food_item.fake_image_url %>">     
      </div>
  <div class="card-block">
    <h4 class="card-title">
      <%= food_item.name %>:<br> <%= number_to_currency(food_item.price) %>
    </h4>
  <p class="card-text"><%= food_item.description %></p>
        
    <%= form_for LineItem.new(food_item: food_item), url: carts_add_path do |f| %>
      <%= f.hidden_field :food_item_id %>
      <%= f.number_field :quantity, class: "input" %>
      <%= f.submit "Order", class: "button is-primary"  %>
      
  <% end %>
    <%= form_tag food_item_path(food_item.id), method: :delete do %>
    <%= submit_tag "Delete", class: " hidden button is-primary", style:"margin: 10px" %>

  <% end %>
    </div>
  
      <% end %>
    <% end %>
 